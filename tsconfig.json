{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"lib": [ "esnext" ],
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "dist",
		"paths": {
			"~*": [ "./*" ]
		},
		"jsx": "preserve",
		"rootDir": "src",
		"target": "esnext"
	},
	"include": [
		"src"
	]
}
